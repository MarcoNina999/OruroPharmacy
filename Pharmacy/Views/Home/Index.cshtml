@{
    ViewBag.Title = "Principal";
    var getProd = ViewBag.product as IEnumerable<Pharmacy.Models.Product>;
}
<style type="text/css">
    .panel .panel-heading a {
        color: whitesmoke;        
    }
</style>
<link href="~/css/Style.css" rel="stylesheet" />
<link href="~/Css/Slider.css" rel="stylesheet" />

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @*<div class="row">*@
<div style="float: right">
    <iframe src="https://calendar.google.com/calendar/embed?height=174&amp;wkst=1&amp;bgcolor=%2333B679&amp;ctz=America%2FLa_Paz&amp;showTitle=1&amp;title=OruroPharmacy&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=1&amp;showTz=0" style="border:solid 1px #777" width="196" height="174" frameborder="0" scrolling="no"></iframe>
</div>
    <div class="col-lg-10 col-sm-12">
        <div id="contentsvg" class="col-sm-12">
            <ul>
                <h1>
                    FARMACIA
                    <em class="planet left">O</em>
                    <em>R</em>
                    <em>U</em>
                    <em>R</em>
                    <em class="planet right">O</em>
                </h1>
            </ul>
        </div>
    </div>
    if (!User.IsInRole("Gerente"))
    {
        <h2 style="text-align-last:center; color: blue">PRODUCTOS EN OFERTA</h2>
        <div class="container-all" style="align-content: center">
            <div class="container-carrousel">
                @if (getProd != null)
                {
                    foreach (var item in getProd)
                    {
                        <figure><img onclick="Edit(@item.Id)" src="@Url.Action("getImage", "Home", new { Id = item.Id })" /></figure>
                    }

                }                
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <a href="~/ManageUsers/UsersRoles">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <i class="fa fa-users fa-5x"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-center">
                                    <div class="huge">Clientes</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <a href="~/ManageUsers/UsersRoles">
                        <div class="panel-footer col-12 text-center">
                            <span class="pull-left">Reporte de Clientes</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <a href="~/Products/">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <i class="fa fa-pills fa-5x"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-center">
                                    <div class="huge">Productos</div>
                                </div>
                            </div>

                        </a>
                    </div>
                    <a href="~/Products/Create">
                        <div class="panel-footer col-12 text-center">
                            <span class="pull-left">Reporte de Productos</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <a href="~/Sale/NewSale">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <i class="fa fa-cart-plus fa-5x"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-center">
                                    <div class="huge">Ventas</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <a href="~/Venta/ReporteVentas">
                        <div class="panel-footer col-12 text-center">
                            <span class="pull-left">Reporte de Ventas</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel">
                    <div class="panel-heading"style="background-color: dodgerblue">
                        <a href="~/Vendedor/Index">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <i class="fa fa-user-md fa-5x"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-center">
                                    <div class="huge">Vendedores</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <a href="~/Vendedor/Index">
                            <div class="panel-footer col-12 text-center">
                                <span class="pull-left">Reporte de Vendedores</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                    </a>
                </div>
            </div>
        </div>
    }
    <br /><br /><br /><br />

    <script>

        function Edit(Id) {
            window.location.href = "/Bookings/NewBooking/" + Id;
        };
    </script>
